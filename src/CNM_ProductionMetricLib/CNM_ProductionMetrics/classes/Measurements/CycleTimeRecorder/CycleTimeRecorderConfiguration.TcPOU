VAR
	configuredTargetCycleTime :LTIME;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[]]></ST>
    </Implementation>
    <Property Name="className" Id="{5b3c2050-1491-4137-813d-69099ec07532}">
